<div class="wrapper">
  <div style="background: url(https://i.imgur.com/6VvV1L3.jpg) no-repeat fixed; background-size: 100%;" class="header-image">
    <div class="header-text">
      Fortnite BR Guide
    </div>
  </div>
</div>

<div class="wrapper">
  <div class="container">
    <div class="flex">

      <main class="content">
        <% @recent_posts.each do |post| %>
          <div class="content-container">
            <div class="one-column">
              <%= link_to(category_post_path(post.category.slug, post)) do %>
                <img class="thumbnail-image" srcset="<%= post.image %>" width="100%" height="auto" />
              <% end %>
            </div>
            <div class="second-column">
              <div class="padding-horizontal">
                <%= link_to post.category.title, category_path(post.category), class: "category-list-text" %>
              </div>
              <div class="post-list-title padding-horizontal">
                <%= link_to post.title, category_post_path(post.category.slug, post) %>
              </div>
              <div class="description-text">
                <%= post.description %>
              </div>
              <div class="bottom">
                <div class="padding-vertical padding-horizontal">
                  <%= link_to "Read More...", category_post_path(post.category.slug, post), class: "submit-button" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </main>

      <aside class="sidebar">

        <div class="side-nav">
          <ul>
            <% @categories.each do |category| %>
              <li><%= link_to category.title, category_path(category) %></li>
            <% end %>
          </ul>
        </div>

        <div class="side-nav">
          <div class="padding-horizontal">
            <div class="padding-vertical border-bottom">
              Recent Posts
            </div>
          </div>
          <ul>
            <% @recent_posts.each do |post| %>
              <li><%= link_to post.title, category_post_path(post.category, post) %></li>
            <% end %>
          </ul>
        </div>

      </aside>

    </div>
  </div>
</div>