<%= provide(:title, "Create New Post") %>

<div class="post-title five-space center">
  Create New Post
</div>

<div class="form-container">
  <%= form_for(@post, url: category_posts_path) do |f| %>
    <%= render 'partials/errors/post_errors' %>
    <div class="field">
      <%= f.text_field :title, placeholder: "Title", class: "text-field" %>
    </div>
    <div class="field">
      <%= f.text_field :image, placeholder: "Image", class: "text-field" %>
    </div>
    <div class="field">
      <%= f.text_area :description, placeholder: "Description", class: "text-area" %>
    </div>
    <div class="field">
      <%= f.text_area :content, placeholder: "Content", class: "text-area" %>
    </div>
    <div class="one-space-top">
      <%= f.check_box :daily %>
      <%= f.label :daily, "This is a daily!" %>
    </div>
    <div class="actions">
      <%= f.submit "Create Post", class: "submit-button" %>
    </div>
  <% end %>
</div>